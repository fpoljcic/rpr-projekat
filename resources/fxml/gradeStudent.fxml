<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="5.0" prefHeight="160.0" prefWidth="242.0" vgap="5.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
          xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@/css/design.css"/>
    </stylesheets>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="124.0" minWidth="10.0" prefWidth="76.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="179.0" minWidth="10.0" prefWidth="66.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="25.0" minHeight="25.0" prefHeight="25.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="25.0" minHeight="25.0" prefHeight="25.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="25.0" minHeight="25.0" prefHeight="25.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="25.0" minHeight="25.0" prefHeight="25.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0"/>
    </rowConstraints>
    <children>
        <Label alignment="CENTER" prefHeight="17.0" prefWidth="123.0" text="Broj bodova:" GridPane.rowIndex="1"/>
        <ButtonBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0" prefWidth="240.0" GridPane.columnSpan="2"
                   GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
            <buttons>
                <Button onAction="#okClick" text="Ok"/>
                <Button mnemonicParsing="false" onAction="#cancelClick" text="Cancel"/>
            </buttons>
        </ButtonBar>
        <Label alignment="CENTER" layoutX="15.0" layoutY="19.0" prefHeight="17.0" prefWidth="121.0" text="Ocjena:"
               GridPane.rowIndex="2"/>
        <Label fx:id="studentLabel" alignment="CENTER" layoutX="15.0" layoutY="49.0" prefHeight="17.0" prefWidth="259.0"
               text="Student: " GridPane.columnSpan="2"/>
        <Spinner fx:id="pointsSpinner" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Spinner fx:id="scoreSpinner" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <HBox alignment="CENTER" prefHeight="25.0" prefWidth="196.0" spacing="20.0" GridPane.columnSpan="2"
              GridPane.rowIndex="3">
            <children>
                <RadioButton fx:id="gradeRadioBtn" mnemonicParsing="false" text="Upiši ocjenu"/>
                <RadioButton fx:id="noGradeRadioBtn" mnemonicParsing="false" text="Samo ažuriraj"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</GridPane>
