<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="5.0" prefHeight="59.0" prefWidth="253.0" vgap="5.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
          xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="124.0" minWidth="10.0" prefWidth="102.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="179.0" minWidth="10.0" prefWidth="136.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="25.0" minHeight="25.0" prefHeight="25.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0"/>
    </rowConstraints>
    <children>
        <Label alignment="CENTER" prefHeight="17.0" prefWidth="110.0" text="Kontrolni kod" GridPane.rowIndex="1"/>
        <TextField fx:id="codeField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <ButtonBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2"
                   GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
            <buttons>
                <Button onAction="#okClick" text="Ok"/>
                <Button mnemonicParsing="false" onAction="#cancelClick" text="Cancel"/>
            </buttons>
        </ButtonBar>
        <Label alignment="CENTER" prefHeight="62.0" prefWidth="243.0"
               text="Šaljemo vam mail sa kontrolnim kodom.&#10;Očekujte kod u narednih par minuta.&#10;Nakon što dobijete kod, unesite ga ispod."
               textAlignment="CENTER" GridPane.columnSpan="2"/>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</GridPane>
